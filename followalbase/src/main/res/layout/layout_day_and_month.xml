<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <com.followal.base.datepicker.date.DayPicker
        android:id="@+id/dayPicker_layout_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:halfVisibleItemCount="2"
        app:indicatorText=" Day" />

    <com.followal.base.datepicker.date.MonthPicker
        android:id="@+id/monthPicker_layout_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:halfVisibleItemCount="2"
        app:indicatorText=" Month" />
</LinearLayout>