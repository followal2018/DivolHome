        <activity android:name=".ui.activity.AddMemberActivity" />
        <activity android:name=".ui.activity.AddRoomActivity" />
        <activity android:name=".ui.activity.AboutActivity" />
        <activity android:name=".ui.activity.FeedbackActivity" />
        <activity android:name=".ui.activity.GoogleAlexaSetupActivity" />
        <activity
            android:name=".ui.activity.MagicRoomActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.WebUrlViewActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            tools:ignore="InnerclassSeparator" />
