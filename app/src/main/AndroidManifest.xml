            android:screenOrientation="portrait"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".ui.activity.WifiSettings"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            tools:ignore="InnerclassSeparator" />
